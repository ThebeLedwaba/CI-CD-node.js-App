{
  "name": "ci-cd-node-app",
  "version": "1.0.0",
  "description": "A production-ready Node.js application demonstrating enterprise CI/CD practices with GitHub Actions, automated testing, and cloud deployment",
  "main": "app.js",
  "type": "commonjs",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "dev:debug": "nodemon --inspect app.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "docker:build": "docker build -t ci-cd-node-app .",
    "docker:run": "docker run -p 3000:3000 ci-cd-node-app",
    "docker:test": "docker run --rm ci-cd-node-app npm test",
    "ci:local": "npm run lint && npm run test:ci && npm run security:audit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "helmet": "^7.0.0",
    "dotenv": "^16.0.3",
    "express-rate-limit": "^7.1.0"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "ci-cd",
    "devops",
    "nodejs",
    "express",
    "github-actions",
    "docker",
    "testing",
    "deployment"
  ],
  "author": "Thebe Ledwaba <thebeledwaba@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ThebeLedwaba/ci-cd-node-app.git"
  },
  "bugs": {
    "url": "https://github.com/ThebeLedwaba/ci-cd-node-app/issues"
  },
  "homepage": "https://github.com/ThebeLedwaba/ci-cd-node-app#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
