{
  "name": "ci-cd-node-app",
  "version": "1.0.0",
  "description": "A production-ready Node.js application demonstrating enterprise CI/CD practices with GitHub Actions, automated testing, and cloud deployment",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "dev:debug": "nodemon --inspect src/app.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npx cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose",
    "test:watch": "npx cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "npx cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:ci": "npx cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --ci --coverage",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "docker:build": "docker build -t ci-cd-node-app .",
    "docker:run": "docker run -p 3000:3000 ci-cd-node-app",
    "docker:test": "docker run --rm ci-cd-node-app npm test",
    "prepare": "husky",
    "ci:local": "npm run lint && npm run test:ci && npm run security:audit"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "eslint"
    ]
  },
  "dependencies": {
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "pino": "^10.3.1",
    "pino-http": "^11.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "cross-env": "^10.1.0",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "ci-cd",
    "devops",
    "nodejs",
    "express",
    "github-actions",
    "docker",
    "testing",
    "deployment"
  ],
  "author": "Thebe Ledwaba <thebeledwaba@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ThebeLedwaba/ci-cd-node-app.git"
  },
  "bugs": {
    "url": "https://github.com/ThebeLedwaba/ci-cd-node-app/issues"
  },
  "homepage": "https://github.com/ThebeLedwaba/ci-cd-node-app#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
